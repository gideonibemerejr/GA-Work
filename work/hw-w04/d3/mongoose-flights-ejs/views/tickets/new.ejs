<%- include ../partials/header %>
<form action="/flights/<%= flightId %>/tickets" autocomplete="off" class="flights-form" method="POST">
    <div>
        <div class="form-group">
            <label for="seat">Seat Number</label>
            <input class="form-control" name="seat" pattern="[A-F][1-9]\d?" placeholder="A-F, 1-99" required/>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input aria-label="Amount (to the nearest dollar)" class="form-control" name="price" type="number">
                <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
        </div>
        <button class="btn btn-dark" type="submit">Add Ticket</button>
    </div>
</form>
<%- include ../partials/footer %>
