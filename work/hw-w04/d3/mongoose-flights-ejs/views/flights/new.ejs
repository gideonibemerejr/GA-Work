<%- include ../partials/header %>
<form action="/flights" autocomplete="off" class="flights-form" method="POST">
  <div>
    <div class="form-group">
      <label for="flightNo">Flight Number</label>
      <input
        name="flightNo"
        type="number"
        class="form-control"
        placeholder="Between 10 and 9999"
      />
    </div>
    <div class="form-group">
      <label for="airline">Airline</label>
      <select class="form-control" name="airline">
        <option>American</option>
        <option>United</option>
        <option>Southwest</option>
      </select>
    </div>
    <div class="form-group">
      <label for="departs">Departs</label>
      <input name="departs" type="datetime-local" />
    </div>
    <div class="form-group">
      <label for="airport">Airline</label>
      <select class="form-control" name="airport">
        <option>AUS</option>
        <option>DAL</option>
        <option>SEA</option>
        <option>LAX</option>
      </select>
    </div>
    <button type="submit" class="btn btn-dark">Add Flight</button>
  </div>
</form>

<%- include ../partials/footer %>
