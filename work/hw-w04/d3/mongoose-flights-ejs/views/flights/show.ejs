<%- include ../partials/header %>
<table class="table table-striped table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Airline</th>
      <th scope="col">Flight Number</th>
    </tr>
  </thead>
  <tbody>
    <tr <% if (flight.departs < today ) {%>
      class="text-danger" <%}%>>
      <th scope="row"><%= flight.airline %></th>
      <td><%= flight.flightNo %></td>
    </tr>
  </tbody>
</table>
<table class="table table-striped table-hover table-light">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Departure</th>
      <th scope="col">Origin</th>
    </tr>
  </thead>
  <tbody>
    <tr <% if (flight.departs < today ) {%>
      class="text-danger" <%}%>>
      <th scope="row">
        <%= flight.departs.toLocaleDateString("en-US", options) %>
      </th>
      <td><%= flight.airport %></td>
    </tr>
  </tbody>
</table>
<% if (flight.destinations.length) { %>
<table class="table table-striped table-hover table-light">
  <thead>
    <tr>
      <th scope="col">Arrival</th>
      <th scope="col">Destination</th>
    </tr>
  </thead>
  <tbody>
    <% flight.destinations.forEach(function(d) {%>
    <tr <% if (flight.departs < today ) {%>
      class="text-danger" <%}%>>
      <th scope="row"><%= d.arrival %></th>
      <th scope="row"><%= d.airport %></th>
    </tr>
    <%});%>
  </tbody>
</table>
<% } else { %>
<h5 class="text-center mt-5">
  There are no destinations for this flight. Add one <a href="#addDest">here</a>
</h5>
<% } %> <% if (tickets.length) { %>
<table class="table table-striped table-hover table-light">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Seat</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    <% tickets.forEach(function(t) {%>
    <tr <% if (flight.departs < today ) {%>
      class="text-danger" <%}%>>
      <th scope="row"><%= t.seat %></th>
      <th scope="row">$<%= t.price %></th>
    </tr>
    <%});%>
  </tbody>
</table>
<% } else { %>
<h5 class="text-center mt-5">
  There are no tickets for this flight. You can create one below
</h5>
<% } %>
<a
  href="/flights/<%= flight._id %>/tickets/new"
  class="flights-form btn btn-dark"
  >Add Tickets</a
>
<form
  id="addDest"
  class="flights-form"
  action="/flights/<%= flight._id%>/destinations"
  method="POST"
>
  <div>
    <h5 class="text-center mt-2">New Destination</h5>
    <div class="form-group">
      <label for="departs">Arrival</label>
      <input type="datetime-local" class="form-control" name="arrival" />
    </div>
    <div class="form-group">
      <label for="airport">Destination</label>
      <select class="form-control" name="airport">
        <option value="AUS">AUS</option>
        <option value="DAL">DAL</option>
        <option value="SEA">SEA</option>
        <option value="LAX">LAX</option>
      </select>
    </div>
    <button type="submit" class="btn btn-dark">Add Destination</button>
  </div>
</form>
<%- include ../partials/footer %>
