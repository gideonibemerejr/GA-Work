<% include ../partials/head %>
<% include ../partials/nav %>
<h1 class="text-center">Skills</h1>
<div class="skills-container">
    <% skills.forEach(function(skill, idx) { %>
    <a href="/skills/<%= idx %>">
        <div class="card skill-card">
            <h2 class="text-center"><%= skill.name %></h2>
            <section>
                <label for="years">Level:</label>
                <% for (let i = skill.stars; i > 0; i--){ %>
                    <i class="fas fa-star"></i>
                <%} %>
            </section>
            <section>
                <label>Exprience:</label>
                <p> &nbsp; <%= skill.years %> years</p>
            </section>
            <section>
             <form action="/skills/<%= idx %>?_method=DELETE" class="delete-form" method="POST">
                <button class="btn btn-danger" type="submit">Delete</button>
            </form>
            </section>
        </div>  
    </a>
    <% }) %>
</div>
<section>
<a class="text-center" href="/skills/new">Add Skill</a>
</section>
<% include ../partials/close %>
